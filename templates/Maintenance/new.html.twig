{% extends 'base_admin.html.twig' %}

{% block pageTitle %}Add Car{% endblock %}


{% block pageBody %}
<div class="container mt-12">
    <h3 class="mb-4">Register Car</h3>
    <form id="carRegistrationForm">
        <div class="row g-3">
            <div class="row">
                <div class="form-group">
                    <label for="SelectMakeChoice" class="form-label">Make</label>
                    <select id="btnSelectMake" class="form-control" required>
                        <option value="">Select a Car Make</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="SelectModelChoice" class="form-label">Model</label>
                    <select id="btnSelectModel" class="form-control" required>
                        <option value="">Select a Car Model</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="SelectYearChoice" class="form-label">Year</label>
                    <select id="btnSelectYear" class="form-control" required>
                        <option value="">Select a Car Year</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="form-group-sm">
                    <label for="mileage" class="form-label">Mileage</label>
                    <div class="input-group">
                        <input type="number" id="mileage" name="mileage" class="form-control" placeholder="Enter mileage" required>
                        <span class="input-group-text">km</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content mt-5">
            <button type="submit" class="btn btn-primary">Register Car</button>
        </div>
    </form>
    </div>
{% endblock %}

{% block additionalJavascript %}
    <script src="{{ asset('js/script.js') }}"> </script>
{% endblock %}

